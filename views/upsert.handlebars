<section class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Order details</h2>
    </div>
    <form method="post" action="/upsert">
      {{#if order}}
      <input type="hidden" name="id" value="{{order.id}}" />
      {{/if}}
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="datetime-local" name="receiveDate" value="{{order.ReceiveDate}}">
          <label class="mdl-textfield__label" for="sample1">Receive Date...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" name="productCode" id="sampleType" value="{{order.SampleType}}">
          <label class="mdl-textfield__label" for="sample1">Sample Type...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text"  name="batch" value="{{order.Batch}}">
          <label class="mdl-textfield__label" for="sample1">Batch...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text"  name="accession" value="{{order.Accession}}">
          <label class="mdl-textfield__label" for="sample1">Accession...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="number" step="0.1"  min="0" name="weight" value="{{order.Weight}}">
          <label class="mdl-textfield__label" for="sample1">Weight ...</label>
        </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
              <input class="mdl-textfield__input" type="datetime-local" name="dateTested" value="{{order.DateTested}}">
              <label class="mdl-textfield__label" for="sample1">Date Tested ...</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
              <input class="mdl-textfield__input" type="datetime-local" name="dateResulted" value="{{order.DateResulted}}">
              <label class="mdl-textfield__label" for="sample1">Date Resulted ...</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
              <input class="mdl-textfield__input" type="number" min="0" step="0.1" name="concentration" value="{{order.Concentration}}">
              <label class="mdl-textfield__label" for="sample1">Concentration ...</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
              <input class="mdl-textfield__input" type=text" name="repeat" value="{{order.Repeat}}">
              <label class="mdl-textfield__label" for="sample1">Repeat...</label>
          </div>
      </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
          {{#if order}}Save{{else}}Create{{/if}}
        </button>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
      </div>
    </form>
  </div>
</section>
